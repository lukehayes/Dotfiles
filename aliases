## General Movement
#------------------------------------------------------------
alias asd="cd"
alias d="cd $HOME/Desktop"
alias dv="cd $HOME/Dev"


## Pacman/Yay
#------------------------------------------------------------
alias pps="pacman -Ss"
alias sps="sudo pacman -S"
alias ys="yay -Ss"


## C/C++
#------------------------------------------------------------
alias m="make"
alias mc="make clean"
alias a="./bin/app"


## PHP/Composer
#------------------------------------------------------------
alias pp="php -S localhost:8000 -t public/"
alias cpda="composer dump-autoload"
alias cpin="composer install"


## Laravel
#------------------------------------------------------------
alias pa="php artisan"
alias pas="pa serve"
alias pam="pa migrate"
alias pad="pa db:seed"


## Symfony
#------------------------------------------------------------
alias sc="symfony console"
alias sst="symfony server:start"
alias scmm="symfony console make:migration"
alias scdm="symfony console doctrine:migrations:migrate"
alias scdd="symfony console doctrine:database:migrate"


## Ruby/Rails
#------------------------------------------------------------
alias rs="rails server"
alias rdm="rails db:migrate"
alias rds="rails db:seed"


## Spotify
#------------------------------------------------------------
alias sp="spotifyd --config-path ~/.config/spotifyd/spotifyd.conf --no-daemon"

## Linux/CLI
#------------------------------------------------------------
alias cat="bat"
alias lg="lazygit"
alias neofetch="neofetch --ascii_distro arch"
